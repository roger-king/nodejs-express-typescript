{
    "name": "nodejs-express-typescript-seed",
    "version": "1.0.0",
    "description": "NodeJS and express (typed) project seed",
    "main": "index.js",
    "scripts": {
        "start:dev": "DEBUG=* nodemon --exec ./node_modules/.bin/ts-node -- ./src/server.ts",
        "start": "DEBUG=* node dist/",
        "prod:run": "export NODE_ENV=production pm2 start dist",
        "prod:compile": "gulp",
        "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
        "test": "./node_modules/.bin/jest",
        "precommit": "lint-staged"
    },
    "repository": {
        "type": "git",
        "url": "www.github.com"
    },
    "keywords": ["nodejs", "typescript", "express"],
    "author": "roger king",
    "license": "ISC",
    "jest": {
        "moduleFileExtensions": ["ts", "js"],
        "transform": {
            "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/src/.*\\.tests.(ts|js)$"
    },
    "lint-staged": {
        "*.{js,json,css,md,ts}": ["prettier --write", "git add"]
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.8",
        "@types/compression": "0.0.36",
        "@types/cors": "^2.8.3",
        "@types/debug": "0.0.30",
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.11.1",
        "@types/helmet": "0.0.34",
        "@types/morgan": "^1.7.35",
        "@types/node": "^9.6.5",
        "gulp": "^3.9.1",
        "gulp-tsc": "^1.3.2",
        "husky": "^0.14.3",
        "jest": "^22.4.3",
        "lint-staged": "^7.0.4",
        "nodemon": "^1.17.3",
        "prettier": "1.12.0",
        "ts-jest": "^22.4.2",
        "ts-node": "^5.0.1",
        "tslint": "^5.9.1",
        "tslint-config-airbnb": "^5.8.0",
        "tslint-config-prettier": "^1.10.0",
        "typescript": "^2.8.1"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "compression": "^1.7.2",
        "cors": "^2.8.4",
        "debug": "^3.1.0",
        "dotenv": "^5.0.1",
        "express": "^4.16.3",
        "helmet": "^3.12.0",
        "morgan": "^1.9.0"
    }
}
